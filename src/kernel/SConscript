environment = Environment(CC = "i686-elf-gcc",
						  CXX = "i686-elf-g++",
						  CXXFLAGS = "-fpic -ffreestanding -std=gnu++11 -O2 -Wall -Wextra",
						  LINKER = "i686-elf-g++",
						  LINKFLAGS = "-T linker.ld -ffreestanding -O2 -nostdlib -lgcc",
						  OBJCOPY = "i686-elf-objcopy")

source_files = []
include_dirs = []

source_files += Glob('*.cpp')
source_files += Glob('c/*.cpp')
source_files += Glob('terminal/*.cpp')

include_dirs += ["."]

kernel_objects = environment.Object(source_files)