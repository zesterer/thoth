environment = Environment(CC = "i686-elf-gcc",
						  CXX = "i686-elf-g++",
						  CXXFLAGS = "-fpic -ffreestanding -std=gnu++11 -O2 -Wall -Wextra",
						  LINKER = "i686-elf-g++",
						  LINKFLAGS = "-ffreestanding -O2 -nostdlib -lgcc",
						  OBJCOPY = "i686-elf-objcopy")

source_files = []
include_dirs = []

source_files += Glob('*.cpp')
source_files += Glob('libstd/*.cpp')

include_dirs += ["."]
include_dirs += ["libstd"]

objects = environment.Object(source_files)